<%- include('./../_partials/header') %>

<div class="container" id="container">
  <div class="row">
    <div class="panel panel-default">
      <br>
      <h3>Your List</h3>

      <hr>
      <p class="col-xs-3" id="list-count"> ‚õÖÔ∏è </p>
      <p class="col-xs-6">:)</p> 
      <p class="col-xs-3">HI</p>
      <br>

      <div id="all-list"></div>

      <script type="text/template" id="userTemplate">
        <%% if (list) { %%>
          <%% list.forEach(item => { %%>
            <hr>
            <p class="col-xs-3" id="list-count">
              <%% if (item.sos) { %>
                  üÜò
              <%% } else { %>
                  ‚òëÔ∏è
              <%% } %>
            </p>
            <p class="col-xs-6"><span id="edit-inline" data-itemId="<%%= item._id %>" <%%= item.sos && 'style="color: red"'%>><%%= item.text %></span></p> 
            <p class="col-xs-3">
              <form action="/list/<%%= item._id %>?_method=DELETE" method="POST">
                  <button type="submit" id="delete-item" data-itemId="<%%= item._id %>" class="btn">X</button>
              </form>
            </p>
          <%% }) %%>
        <%% } %%>
      </script>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="input-group input-group-lg">
        <div class="input-group-btn">
          <button id="dropdown" type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" >
            <span class="glyphicon glyphicon-plus"></span>
          </button>
          <div class="dropdown-menu">
            <a class="dropdown-item" href="" id="normal">Normal</a>
            <div role="separator" class="divider"></div>
            <a class="dropdown-item" href="" id="help">SOS</a>
          </div>
        </div>
        <input type="text" id="item" name="list" class="form-control" placeholder="Add item...">
      </div>
    </div>    
</div>

<script async defer src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js"></script>
