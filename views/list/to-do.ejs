<%- include('./../_partials/header') %>

<div class="container">
  <div class="row">
    <div class="panel panel-default">
      <br>
      <h3>Your List</h3>
      <hr>

      <div class="header">
        <p class="col-xs-3">#</p>
        <p class="col-xs-6">Item</p>
        <p class="col-xs-3">Active</p> 
      </div>
      <br>

      <div id="all-list"></div>

      <script type="text/template" id="userTemplate">
        <%% if (list) { %%>
          <%% list.forEach(item => { %%>
            <hr>
            <p class="col-xs-3">1</p>
            <p class="col-xs-6"><a href="/list/<%%= item._id %>" <%%= item.sos && 'style="color: red"'%>><%%= item.text %></a></p> 
            <p class="col-xs-3">
              <form action="/list/<%%= item._id %>?_method=DELETE" method="POST">
                  <button type="submit" data-itemId="<%%= item._id %>" class="btn">X</button>
              </form>
            </p>
          <%% }) %%>
        <%% } %%>
      </script>
    </div>
  </div>
</div>

